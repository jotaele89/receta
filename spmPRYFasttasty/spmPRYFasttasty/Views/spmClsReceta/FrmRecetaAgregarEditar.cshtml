@model spmPRYFasttasty.Models.spmRECpReceta

@{
    List<spmPRYFasttasty.Models.spmRECpReceta> receta = ViewBag.spmRECpReceta;
    List<spmPRYFasttasty.Models.spmPADtPadecimiento_Salud> salud = ViewBag.spmPADtPadecimiento_Salud;
    List<spmPRYFasttasty.Models.spmUSUtUsuario> usuario = ViewBag.spmUSUtUsuario;

    ViewBag.Title = "Index";
}

<section class="info py-5 px-lg-5">

    <h3 class="tittle-w3"><span>Registrar </span>Receta</h3>


    <div class="container contact-form mx-auto text-lg-center " float="center">

        @using (Html.BeginForm("Guardar", "spmClsReceta", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x => x.RECid)

            <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label" style="font-weight:bold; text-align: left">Nombre de la Receta</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.RECnombre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.RECnombre, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label" style="font-weight:bold; text-align: left">tipo plato:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.RECtipo_plato, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.RECtipo_plato, null, new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label" style="font-weight:bold; text-align: left">tiempo estimado de preparacion:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.RECtiempo_preparacion, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.RECtiempo_preparacion, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label" style="font-weight:bold; text-align: left">foto referencial</label>
                <div class="col-sm-10">
                    <input type="file" name="RECfoto" id="file" class="form-control" required />
                    

                </div>
            </div>

            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label" style="font-weight:bold; text-align: left">Recomendacion para la salud</label>
                <div class="col-sm-10">
                    <select name="PADid" class="form-control">
                        <option @(Model.PADid.Equals("") ? "selected" : "") value="">-Seleccione-</option>
                        @foreach (var d in salud)
                        {
                            <option @(Model.PADid.Equals(d.PADid) ? "selected" : "") value="@d.PADid">@d.PADnombre</option>
                        }
                    </select>

                    @Html.ValidationMessageFor(x => x.PADid, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label" style="font-weight:bold; text-align: left">procedimiento:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.RECprocedimiento_preparacion, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.RECprocedimiento_preparacion, null, new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label" style="font-weight:bold; text-align: left">Usuarios</label>
                <div class="col-sm-10">
                    <select name="USUid" class="form-control">
                        <option @(Model.USUid.Equals("") ? "selected" : "") value="">-Seleccione-</option>
                        @foreach (var d in usuario)
                        {
                            <option @(Model.USUid.Equals(d.USUid) ? "selected" : "") value="@d.USUid">@d.USUnombre, @d.USUapellido</option>
                        }
                    </select>

                    @Html.ValidationMessageFor(x => x.USUid, null, new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group mx-auto mt-3">
                <button type="submit" class="btn btn-default morebtn more black con-submit"> <span class="fa fa-save" aria-hidden="true"></span><b> Registrar</b></button>

            </div>

        }

     </div>



</section>

