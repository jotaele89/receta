
@model spmPRYFasttasty.Models.spmRINpReceta_Ingrediente

@{
    List<spmPRYFasttasty.Models.spmRECpReceta> receta = ViewBag.spmRECpReceta;
    List<spmPRYFasttasty.Models.spmINGtIngrediente> ingrediente = ViewBag.spmINGtIngrediente;
    List<spmPRYFasttasty.Models.spmRINpReceta_Ingrediente> receta_Ingredientes = ViewBag.spmRINpReceta_Ingrediente;

}
<link href="~/Contenido/css/bootstrap.css" rel="stylesheet" />
<body>
    <h3 class="tittle-w3"><span>Añadir </span>Ingrediente</h3>

    <section class="info py-5 px-lg-5">
        <div class="content-w3ls-inn px-lg-5">
            <div class="container py-md-5 py-3">
                <div class="px-lg-5">
                    <br />
                    <br />
                    <div class="container contact-form mx-auto text-lg-center " float="center">

                        @using (Html.BeginForm("GuardarREC", "spmClsReceta", FormMethod.Post, new { id = "frm-RecetaING" }))
                        {
                            @Html.HiddenFor(x => x.RINid)

                            <div class="form-group row">
                                <label for="" class="col-sm-2 col-form-label" style="font-weight:bold; text-align: left">Receta</label>
                                <div class="col-sm-10">
                                    <select name="RECid" class="form-control">
                                        <option @(Model.RECid.Equals("") ? "selected" : "") value="">-Seleccione-</option>
                                        @foreach (var d in receta)
                                        {
                                            <option @(Model.RECid.Equals(d.RECid) ? "selected" : "") value="@d.RECid">@d.RECnombre</option>
                                        }
                                    </select>

                                    @Html.ValidationMessageFor(x => x.RECid, null, new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="" class="col-sm-2 col-form-label" style="font-weight:bold; text-align: left">Ingrediente</label>
                                <div class="col-sm-10">
                                    <select name="INGid" class="form-control">
                                        <option @(Model.INGid.Equals("") ? "selected" : "") value="">-Seleccione-</option>
                                        @foreach (var d in ingrediente)
                                        {
                                        <option @(Model.INGid.Equals(d.INGid) ? "selected" : "") value="@d.INGid">@d.INGnombre /  @d.INGunidad_medida</option>
                                        }
                                    </select>

                                    @Html.ValidationMessageFor(x => x.INGid, null, new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group row">
                                <label for="" class="col-sm-2 col-form-label" style="font-weight:bold; text-align: left">cantidad</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.RINcantidad_ingrediente, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.RINcantidad_ingrediente, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group mx-auto mt-3">
                                <button type="submit" class="btn btn-default morebtn more black con-submit"> <span class="fa fa-save" aria-hidden="true"></span><b> Registrar</b></button>

                            </div>

                        }

                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th style="width:50px">ID</th>
                                    <th style="width:50px">Nombre de la receta</th>
                                    <th style="width:50px">Ingrediente</th>
                                    <th style="width:50px">Cantidad</th>
                                    >
                                    <th style="width:50px">Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var u in receta_Ingredientes)
                                {
                                    <tr>
                                        <th>@(u.RINid)</th>
                                        <th>@(u.spmRECpReceta.RECnombre)</th>
                                        <th>@(u.spmINGtIngrediente.INGnombre)</th>
                                        <th>@(u.RINcantidad_ingrediente)</th>
                                  
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>

                </div>

            </div>
        </div>
    </section>


</body>